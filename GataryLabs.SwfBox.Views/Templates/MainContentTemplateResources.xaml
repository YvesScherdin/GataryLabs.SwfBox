<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:GataryLabs.SwfBox.ViewModels.Abstractions;assembly=GataryLabs.SwfBox.ViewModels.Abstractions"
                    xmlns:views="clr-namespace:GataryLabs.SwfBox.Views;assembly="
                    xmlns:templates="clr-namespace:GataryLabs.SwfBox.Views.Templates">

    <templates:ViewModelDataTemplateSelector x:Key="DataTemplateSelector.ViewModels">

        <templates:ViewModelDataTemplateSelector.Resources>
            <ResourceDictionary>
                <DataTemplate x:Key="{x:Type viewModels:IMainWindowSwfDetailsContentViewModel}">
                    <views:MainWindowSwfDetailsContentView/>
                </DataTemplate>

                <DataTemplate x:Key="{x:Type viewModels:IMainWindowOverviewContentViewModel}">
                    <views:MainWindowOverviewContentView/>
                </DataTemplate>
                
                <DataTemplate x:Key="{x:Type viewModels:IMainWindowErrorContentViewModel}">
                    <views:MainWindowSwfDetailsContentView/>
                </DataTemplate>
            </ResourceDictionary>
        </templates:ViewModelDataTemplateSelector.Resources>

    </templates:ViewModelDataTemplateSelector>

</ResourceDictionary>