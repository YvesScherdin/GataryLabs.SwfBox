<adonisControls:AdonisWindow x:Class="GataryLabs.SwfBox.Views.SettingsWindow"
        xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GataryLabs.SwfBox.Views"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource ResourceKey={x:Type Window}}"/>
    </Window.Style>

    <adonisControls:AdonisWindow.TitleBarContent>

        <StackPanel Orientation="Horizontal">
            <Button Content="Help"
                    HorizontalAlignment="Right"
                    Style="{DynamicResource {x:Static adonisUi:Styles.AccentToolbarButton}}"/>
        </StackPanel>

    </adonisControls:AdonisWindow.TitleBarContent>

    <Grid>

    </Grid>
</adonisControls:AdonisWindow>
